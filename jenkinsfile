pipeline {
    agent any
    
    stages {
        stage('Clonar Repositorio') {
            steps {
                // Clonar el repositorio de tu aplicaci贸n desde el control de versiones
                git branch: 'main', url: 'https://github.com/Manferno/ProyectoDevOps.git'

            }
        }
        
        stage('Instalar Dependencias') {
            steps {
                // Instalar las dependencias de Node.js y de la aplicaci贸n React
                sh 'npm install'
            }
        }
        
        stage('Construir la Aplicaci贸n') {
            steps {
                // Construir la aplicaci贸n React
                sh 'npm run build'
            }
        }
    }
    
    post {
        success {
            // Acciones a realizar si el despliegue es exitoso
            echo 'Despliegue exitoso'
        }
        failure {
            // Acciones a realizar si el despliegue falla
            echo 'Error en el despliegue'
        }
    }
}